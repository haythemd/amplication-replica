datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  certifications Certification[]
  classRoom      ClassRoom?      @relation(fields: [classRoomId], references: [id])
  classRoomId    String?
  createdAt      DateTime        @default(now())
  firstName      String?
  id             String          @id @default(cuid())
  lastName       String?
  notePapers     NotePaper[]
  password       String
  roles          String[]
  updatedAt      DateTime        @updatedAt
  username       String          @unique
}

model Course {
  createdAt     DateTime @default(now())
  description   String?
  enrolledUsers String?
  id            String   @id @default(cuid())
  title         String?
  updatedAt     DateTime @updatedAt
}

model NotePaper {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model Certification {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  link      String
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model ClassRoom {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  syllabus  String?
  updatedAt DateTime @updatedAt
  users     User[]
}

model Syllabus {
  createdAt DateTime @default(now())
  desc      String?
  id        String   @id @default(cuid())
  teacher   String?
  title     String?
  updatedAt DateTime @updatedAt
}